{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "baseUrl": "./",
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "components/*": ["src/components/*"]
    }
  },
  "include": ["src"],
  "compileOnSave": false
}
